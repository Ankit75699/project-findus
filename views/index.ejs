<% include header %>



<!-- main section starts -->
<div id="tooplate_main">

    <!-- content section starts -->
    <div id="tooplate_content">

        <h2>Category list</h2>
        <style>
            #main {
                height: auto;
                width: 600px;
            }

            .main_part {
                height: 150px;
                width: 200px;
                float: left;
            }
        </style>
        <div id="main">
            <% for(row of clist) { %>
            <a href="viewsubcategory?catnm=<%= row.catnm %>">
                <div class="main_part">
                    <center>
                        <img src="uploads/categoryicons/<%= row.caticonnm %>" alt="image" height="100px"
                            width="150px" />
                        <br><br>
                        <b><%= row.catnm %></b>
                    </center>
                </div>
            </a>
            <% } %>
        </div>

        <!-- Write your content here -->

    </div>
    <!-- content section ends -->

    <!-- sidebar section starts -->

    <div id="tooplate_sidebar">

        <h2>Social Links</h2>

        <ul class="tooplate_list">
            <li><a href="#">@Facebook</a></li>
            <li><a href="#">@Twitter</a></li>
            <li><a href="#">@Gmail</a></li>
            <li><a href="#">@Google+</a></li>

            <div class="cleaner_h60"></div>




    </div>
    <!-- sidebar section ends -->

    <div class="cleaner"></div>
</div>
<div class="cleaner"></div>

<!-- main section ends -->

<% include footer %>